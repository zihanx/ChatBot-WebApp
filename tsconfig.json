{
  "compilerOptions": {
    "outDir": "./chatbot/static/js/",  
    "rootDir": "./chatbot/static/js/", 
    "strict": true,
    "module": "NodeNext",  // ðŸ”¹ Fix for module resolution
    "moduleResolution": "NodeNext",  // ðŸ”¹ Ensures TS correctly resolves modules
    "target": "ES6",
    "esModuleInterop": true,  // ðŸ”¹ Allows CommonJS-style imports
    "skipLibCheck": true  // ðŸ”¹ Avoids issues with type mismatches
  },
  "include": [
    "chatbot/static/js/**/*.ts"  
  ],
  "exclude": [
    "node_modules"
  ]
}
